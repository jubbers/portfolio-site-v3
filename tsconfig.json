{
    "compilerOptions": {
        "baseUrl": "./src",
        "jsx": "react",
        "moduleResolution": "Node",
        "paths": {
            "~components/*": ["./components/*"],
            "~layouts/*": ["./layouts/*"],
            "~styles/*": ["./styles/*"],
            "~media/*": ["./media/*"]
        },
        "strict": true,
        "target": "ES2015"
    },
    "include": ["src/**/*"]
}